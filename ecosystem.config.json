{
  "apps": [
    {
      "name": "yttmp3-com",
      "script": "npm",
      "args": "start",
      "cwd": "/path/to/your/nextjs-youtube-dl",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "log_file": "./logs/app.log",
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=4096",
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 10000,
      "autorestart": true,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        ".git",
        ".next"
      ],
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    }
  ]
}